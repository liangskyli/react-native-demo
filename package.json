{
  "name": "DemoProject",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "update:deps": "pnpm update --interactive --latest",
    "android": "react-native run-android",
    "build:android:win-cmd-prod": "cd android && gradlew clean && gradlew assembleRelease",
    "build:android:prod": "cd android && gradlew clean && ./gradlew assembleRelease",
    "ios": "react-native run-ios",
    "bundle-ios": "node node_modules/react-native/local-cli/cli.js bundle --entry-file index.js  --platform ios --dev false --bundle-output ./ios/bundle/index.ios.jsbundle --assets-dest ./ios/bundle",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "react": "19.1.0",
    "react-native": "0.80.2",
    "@react-native/new-app-screen": "0.80.2",
    "react-native-bootsplash": "^6.3.10"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/runtime": "^7.28.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@react-native-community/cli": "19.1.1",
    "@react-native-community/cli-platform-android": "19.1.1",
    "@react-native-community/cli-platform-ios": "19.1.1",
    "@react-native/babel-preset": "^0.80.2",
    "@react-native/eslint-config": "^0.80.2",
    "@react-native/metro-config": "^0.80.2",
    "@react-native/typescript-config": "^0.80.2",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^15.5.2",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "react-test-renderer": "19.1.0",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18.20.0",
    "pnpm": "^10"
  }
}
